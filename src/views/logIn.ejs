
<!DOCTYPE html> 
<html>
     <!-- HEAD -->
     <%- include('./partials/head') %>
<body>
    <!-- HEADER -->
    <%- include('./partials/header') %>
        
    <!-- MAIN --> 
    <main>
        <section class="section-set-display formulario" id="form-LogIn-Register">
            <!--Ingreso de usuario registrado-->
            <article class="formulario-login">
                
                <form action="/user" method="post" id="login">
                    <h2>Ingresá</h2>
                    <br>

                    <label class="label-bold" for="correo">Usuario 
                        <br>
                        <input class= "input-formulario" type="email" name="correo" id="emailLogIn" placeholder="Aprobanos el Sprint 7" minlength="5" maxlength="30"  value="<%= typeof old != 'undefined' ? old.correo : '' %>">
                        <br>
                        <div class="text-danger" id="emailLogInErr"></div>
                        <% if(typeof(errors) != 'undefined' && errors.correo){%>
                            <span class="text-danger"> 
                              <%= errors.correo.msg %>
                            </span>
                         <%}%>
                         <br>
                    </label>

                    <label class="label-bold" for="contrasena">Contraseña
                        <input class= "input-formulario"  type="password" name="contrasena" id="passwordLogIn" placeholder="Por favor" >
                        <br>
                        <div class="text-danger" id="passwordLogInErr"></div>
                        <% if(typeof(errors) != 'undefined' && errors.contrasena){%>
                            <span class="text-danger">
                              <%= errors.contrasena.msg %>
                            </span>
                         <%}%>
                         <br>
                    </label>

                    <label class="label-bold" for="recordarme">
                        <div class="recuerdame-box">
                            Recordarme
                            <input class="input-formulario-rcuerdame" type="checkbox" name="recordarme" id="recordarme">
                        </div>
                    </label>

                   
                    <input  class='submit-login' type="submit" value="Ingresar">
                    <input  class='submit-login' type="submit" value="Ingresar con Facebook">
                    <input  class='submit-login' type="submit" value="Ingresar con Google">
                    

                    <a href="#" >¿Olvidaste tu contraseña?</a>

                </form>

            </article>

            <!--Creacion de usuario nuevo-->
            <article class="formulario-registro" id="articleRegister">    
               
                
                <form action="/user/login" method="POST" id="registro" enctype="multipart/form-data">
                    <div class="registro">
                        <h2>Creá tu cuenta</h2>
                        <h4>Datos Personales</h4>
                    </div>

                    <label class="label-bold"  for="name">Nombre
                        <input 
                        type="text" 
                        name="fullName" 
                        id="nameRg" 
                        class= "input-formulario <%= locals.errors && errors.fullName ? 'is-invalid' : null %>"
                        placeholder="Jere"
                        value="<%= locals.oldData ? oldData.fullName : null %>" >
                    </label>
                    <div class="text-danger" id="nameRgErr"></div>
                    <% if(locals.errors && errors.fullName) { %>
                    <samp class="text-danger">
                    <%= errors.fullName.msg %>
                    </samp>
                    <% } %>

                    <label class="label-bold" for="name">Apellido
                        <input class= "input-formulario" type="text" name="lastName" id="lastNameRg" placeholder="Castillo" value="<%= locals.oldData ? oldData.lastName : null %>">
                    </label>
                    <div class="text-danger lastNameRgErr" id="lastNameRgErr"></div>
                    <% if(locals.errors && errors.lastName) { %>
                    <samp class="text-danger">
                        <%= errors.lastName.msg %>
                    </samp>
                        <% } %>

                    <label class="label-bold" for="email">Email
                        <input class= "input-formulario" type="email" name="email" id="emailRg" placeholder='jeremias.castillo@digitalhouse.com' value="<%= locals.oldData ? oldData.email: null %>">
                    </label>
                    <div class="text-danger" id="emailRgErr"></div>
                    <% if(locals.errors && errors.email) { %>
                    <samp class="text-danger">
                        <%= errors.email.msg %>
                    </samp>
                        <% } %>

                    <label class="label-bold" for="password">Contraseña
                        <input class= "input-formulario" type="password" name="password" id="passwordRg" placeholder="Sos un capo!" >
                    </label>
                    <div class="text-danger" id="passwordRgErr"></div>
                    <!--ul class="passwordList" id="ulPasswordRg">
                        <li id="upper">Debes colocar una mayúscula</li>
                        <li id="lower">Debes colocar una minúscula</li>
                        <li id="num">Debes colocar un número</li>
                        <li id="charter">Debes colocar un caracter especial</li>
                    </ul-->
                    <% if(locals.errors && errors.password) { %>
                    <samp class="text-danger">
                        <%= errors.password.msg %>
                    </samp>
                        <% } %>

                    <label class="label-bold"  for="passconfcon"> Confirmar Contraseña
                        <input class= "input-formulario" type="password" name="passconfcon" id="passconfconRg" placeholder="Lo repito, sos un capo!" >
                    </label>
                    <div class="text-danger" id="passconfconRgErr"></div>
                    <% if(locals.errors && errors.passconfcon) { %>
                        <samp class="text-danger">
                            <%= errors.passconfcon.msg %>
                        </samp>
                            <% } %>
                    <br>
                    <label class="label-bold"  for="avatar"> Imagen de Perfil
                        <input class= "input-formulario" type="file" name="avatar" id="avatar" >
                    </label>
                    <div class="text-danger" id="avatarErr"></div>
                    <% if(locals.errors && errors.avatar) { %>
                        <samp class="text-danger">
                            <%= errors.avatar.msg %>
                        </samp>
                            <% } %>

                 

                    <input  class='submit-login' type="submit" value="Registrar" id="buttonRegister">
                </form>
                
            </article>
        
        </section>
        <section class="section-set-display">
            <div class="btn-whatsapp">
                <a href="https://api.whatsapp.com/send/?phone=+54 11 36346889&text=Tecnomundo!" target="_blank" title="¡Dejanos tu mensaje!"><img src="images/whatsapp-logo.png" alt="whatsapp logo"></a> 
            </div>
        </section>
     </main>

    <!-- FOOTER -->
    <%- include('./partials/footer') %>
<script src="/js/validacionesDos.js"></script>
 </body>
</html>