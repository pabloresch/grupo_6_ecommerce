    <!-- MAIN -->
    <main class="main-login">
        <div class="main">  	
            <input type="checkbox" id="chk" aria-hidden="true">
    
                <div class="login">
                    <form action="/user" method="post" id="login">
                        <label for="chk" aria-hidden="true">Ingresa</label>
                        <input class= "input-formulario" type="email" name="correo" id="correo" placeholder="abc@hotmail.com" minlength="5" maxlength="30"  value="<%= typeof old != 'undefined' ? old.correo : '' %>">
                     <% if(typeof(errors) != 'undefined' && errors.correo){%>
                            <span class="text-danger"> 
                              <%= errors.correo.msg %>
                            </span>
                     <%}%> 
                     <input class= "input-formulario"  type="password" name="contrasena" id="contrasena" placeholder="Contraseña" >
                       
                        <% if(typeof(errors) != 'undefined' && errors.contrasena){%>
                            <span class="text-danger">
                              <%= errors.contrasena.msg %>
                            </span>
                         <%}%>
                            
                       
                        <button><input type="submit" value="Ingresar"></button>
                        <label class="label-bold" for="recordarme">
                            <div class="recuerdame-box">
                                Recordarme
                                <input class="input-formulario-rcuerdame" type="checkbox" name="recordarme" id="recordarme">
                            </div>
                        </label>
                        <a href="#" >¿Olvidaste tu contraseña?</a>
                         
                        
                </form>
                </div>
    
                <div class="signup">
                    <form action="/user/login" method="POST" id="registro" enctype="multipart/form-data">
                        <label for="chk" aria-hidden="true">Creá tu cuenta</label>

                        <input 
                            type="text" 
                            name="fullName" 
                            id="name" 
                            class= "<%= locals.errors && errors.fullName ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.fullName : null %>" >
                       
                        <% if(locals.errors && errors.fullName) { %>
                        <div class="text-danger">
                        <%= errors.fullName.msg %>
                        </div>
                        <% } %>
    
                        
                            <input  type="text" name="lastName" id="name"  value="<%= locals.oldData ? oldData.lastName : null %>">
                        
                        <% if(locals.errors && errors.lastName) { %>
                        <div class="text-danger">
                            <%= errors.lastName.msg %>
                        </div>
                            <% } %>
    
                        
                            <input  type="email" name="email" id="email"  value="<%= locals.oldData ? oldData.email: null %>">
                        
                        <% if(locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %>
                        </div>
                            <% } %>
    
                       
                            <input  type="password" name="password" id="password" placeholder="Contraseña" >
                       
                        <% if(locals.errors && errors.password) { %>
                        <div class="text-danger">
                            <%= errors.password.msg %>
                        </div>
                            <% } %>
    
                        
                            <input  type="password" name="passconfcon" id="passconfcon" placeholder=" Confirmar contraseña" >
                        
                        <% if(locals.errors && errors.passconfcon) { %>
                            <div class="text-danger">
                                <%= errors.passconfcon.msg %>
                            </div>
                                <% } %>
                        
                        
                            <input type="file" name="avatar" id="avatar" >
                    
                        <% if(locals.errors && errors.avatar) { %>
                            <div class="text-danger">
                                <%= errors.avatar.msg %>
                            </div>
                                <% } %>
    
                     
    
                        <input  class='submit-login' type="submit" value="Registrar">
                    </form>
                    
                        <!-- <input type="email" name="email" placeholder="Email" required="">
                        <input type="password" name="pswd" placeholder="Password" required="">
                        <button>Login</button> -->
                    </form>
                </div>
        </div>
    </body>
       

        
