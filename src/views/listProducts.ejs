<!DOCTYPE html> 
 
<html>
     <!-- HEAD -->
     <head lang="en"> 
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <title>TecnoMundo</title> 
        <base href = "/"> 
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href="css/normalize.css" rel="stylesheet">
        <link href="css/style-listadoCelulares.css" rel="stylesheet">
        <script src="/js/header.js" defer></script> 
    </head>
<body>
    <!-- HEADER -->
    <%- include('./partials/header') %>
        
    <!-- MAIN -->

        <main>
        <div class = 'main-listaProductos'>
            
        <section class="section-set-display filtrados">
            <div class="filtros-aplicados">
                <ul>
                    <li><h2>Filtros aplicados</h2></li>
                    <li><h3 class="marcas">Marcas</h3>
                        <ul class="tipo-marcas">
                            <div class="checkbox">
                               <input type="checkbox" id="samsung" name="samsung">
                               <label for="samsung"><h4>Samsung</h4></label>
                            </div>
                            
                            <div class="checkbox">
                                <input type="checkbox" id="xiaomi" name="xiaomi">
                                <label for="xiaomi"><h4>Xiaomi</h4></label>
                            </div>
                            <div class="checkbox">
                                <input type="checkbox" id="huawei" name="huawei">
                                <label for="huawei"><h4>Huawei</h4></label>
                            </div>
                                
                            
                            
                        </ul>
                    
                    </li>

                    
                    <li><h3 class="precios">Precios</h3>
                        <ul class="gama-precios">
                            
                            <li class="filtros-precios" ><h3>Hasta $10.000</h3></li>
                            <li class="filtros-precios" ><h3>$10.000 - $50.000</h3></li>
                            <li class="filtros-precios" ><h3>$50.000 - $100.000</h3></li>
                            <li class="filtros-precios" ><h3>Arriba de $100.000</h3></li>
                            


                        </ul>
                    
                    </li>
    
                </ul>

            </div>

        </section>


        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Todos Los Productos</h2>
                </div>
                <!-- Tarjeta de producto -->
                <% products.forEach (item => { %>
                <div class="col-12 col-sm-6 col-lg-3"> 
                    <section class='article-style-celulares article01'>
                        <% if (item.discount != 0) { %>
                        <div class="imgOferta"><img src="images/celulares/oferta.webp" alt="oferta"></div>
                        <% } %>
                        <div class="imgProduct"><img src="images/products/<%= item.image_product %>"></div>
                        <article class="descriptionProduct listProduct">
                            <div class="title-product">
                                <h5><%= item.name %></h5>
                            </div>
                            <div class="price-product">
                                <h5>$ <%= (((100 - item.discount)/100)*item.price_product).toFixed(2) %></h5>
                            </div> 
                            <% if (item.discount != 0) { %>
                                <div class="discount-listaProducto">
                                    <h6 class="precio-tachado">$ <%= item.price_product %></h6>
                                    <h6><%= item.discount %> % OFF</h6>
                                </div>
                            <% } %>
                           
                            <div class="verProducto">
                                <!-- buttom using OnClick JS - cambiar con item.id -->
                                <button class='submit-verProducto' onclick="window.location.href='/product/productDetail/<%= item.id %>'">
                                    Ver Producto
                                  </button>
                              </div>
                        </article>
                    </section>    
                </div> 
            <% }) %>               
            </div>     
        
   
     </main>
      <!-- FOOTER -->
    <%- include('./partials/footer') %>
   
</body>